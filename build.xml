<project name="clj-ds" default="jar" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

	<property name="src" location="src" />
	<property name="build" location="classes" />
	<property name="dist" location="dist" />
	<property name="lib" location="lib" />
	<property name="test-src" location="test" />
	<property name="build-test" location="testclasses" />

    <path id="maven-ant-tasks.classpath" path="${lib}/maven-ant-tasks-2.1.2.jar" />

    <typedef resource="org/apache/maven/artifact/ant/antlib.xml"
        uri="antlib:org.apache.maven.artifact.ant"
        classpathref="maven-ant-tasks.classpath" />

	<target name="clean" description="Remove autogenerated files and directories.">
		<delete dir="${build}" />
		<delete dir="${dist}" />
		<delete dir="${build-test}" />
	</target>

	<target name="init">
		<tstamp />
		<mkdir dir="${build}" />
		<mkdir dir="${build-test}" />
		<mkdir dir="${dist}" />
	</target>

	<target name="compile" depends="init" description="Compile Java sources.">
		<javac srcdir="${src}" destdir="${build}" includeJavaRuntime="yes" target="1.5" >
			<classpath>
				<pathelement location="${lib}/jsr166y.jar" />
			</classpath>
		</javac>
	</target>
	<target name="jar" depends="compile">
		<jar jarfile="${dist}/clj-ds.jar" basedir="${build}">
		</jar>
	</target>
	
	<target name="compile-tests" depends="jar" description="Compile Test sources.">
		<javac srcdir="${test-src}" destdir="${build-test}" includeJavaRuntime="yes" target="1.5">
			<classpath>
				<pathelement location="${lib}/jsr166y.jar" />
				<pathelement location="${lib}/junit-4.8.2.jar" />
				<pathelement location="${dist}/clj-ds.jar" />
			</classpath>
		</javac>
	</target>

	<target name="jartest" depends="compile-tests">
		<jar jarfile="${dist}/clj-ds-test.jar" basedir="${build-test}">
		</jar>
	</target>

	<target name="test" depends="jartest">
		<echo>Note: the tests take some time (about 5-10 minutes to run). Be patient.</echo>
		<junit>
			<classpath>
				<pathelement location="${lib}/jsr166y.jar" />
				<pathelement location="${lib}/junit-4.8.2.jar" />
				<pathelement location="${dist}/clj-ds.jar" />
				<pathelement location="${dist}/clj-ds-test.jar" />
			</classpath>
			<formatter type="plain" usefile="false" />
			
			<test name="com.trifork.clj_ds.test.AllTests" />
		</junit>
	</target>

    <target name="create-maven-pom" depends="jar" unless="skip-maven"
        description="Builds maven pom.xml for people still forced to use maven :(">
        <artifact:pom id="clj-ds" groupId="com.trifork" artifactId="clj-ds"
            version="1.2" name="Clojure DataStructures backported to java">
            <license name="epl-1.0" url="http://www.eclipse.org/legal/epl-v10.html" />
            <dependency groupId="jsr166y" artifactId="jsr166y" version="0.4.40-SNAPSHOT" />
            <remoteRepository id="jsr166y-mirror"
                url="http://snapshots.repository.codehaus.org/org/codehaus/jsr166-mirror">
                <releases enabled="true" />
                <snapshots enabled="true" />
            </remoteRepository>
        </artifact:pom>

        <artifact:writepom pomRefId="clj-ds" file="${dist}/pom.xml" trim="true" />
    </target>

</project>
